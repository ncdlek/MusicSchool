
@{
    ViewBag.Title = "Enstrüman Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Lecture

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="pull-left">
            <h4>Enstrüman Bilgileri</h4>
        </div>
        <div class="text-right">
            <a href="/Lecture/Update/@Model.Id" class="btn btn-info">Güncelle</a>
        </div>
    </div>
    <div class="panel-body form-horizontal">
        <div class="form-group">
            <label for="name" class="control-label col-sm-2">Adı:</label>
            <div class="col-sm-10">
                <p id="name" class="form-control-static">@Model.Name</p>
            </div>

            <label for="description" class="control-label col-sm-2">Açıklama:</label>
            <div class="col-sm-10">
                <p id="description" class="form-control-static">@Model.Description</p>
            </div>
        </div>

    </div>
</div>