
@{
    ViewBag.Title = "Enstrüman Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12 panel panel-default">
    <div class="row panel-heading">
        <h4>Enstrüman Ekle</h4>
    </div>
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <div class="row panel-body">
            <form method="post" action="/Lecture/Add">
                @Html.AntiForgeryToken()
                <div class="col-sm-6">
                    <div class="form-group">
                        <input id="name" type="text" class="form-control" name="name" placeholder="Enstüman Adı">
                    </div>
                    <div class="form-group">
                        <input id="description" type="text" class="form-control" name="description" placeholder="Açıklama">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                    </div>
                </div>
                <div class="col-sm-6 text-warning">@Html.ValidationSummary(false)</div>
            </form>
        </div>
    }
    else
    {
        <div class="col-md-12 panel-body text-center"><h4>Enstrüman eklemek için giriş yapın</h4></div>
    }
</div>

