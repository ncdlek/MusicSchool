
@{
    ViewBag.Title = "Enstrümanlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<Lecture>

<div class="panel panel-default minimum">
    <div class="panel-heading">
        <div class="pull-left">
            <h4>Enstrümanlar</h4>
        </div>
        <div class="text-right">
            <a class="btn btn-default" href="/Lecture/Add" role="button">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                Enstrüman Ekle
            </a>
        </div>
    </div>
    <div class="panel-body">
        @foreach (var item in Model)
        {
            <p><a href="/Lecture/Detail/@item.Id">@item.Name</a>  - @item.Description</p>
        }
    </div>
</div>